<Window x:Class="E2EDataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E2EDataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="slider" HorizontalAlignment="Left" Height="40" Margin="38,358,0,0" VerticalAlignment="Top" Width="730" Maximum="120" Minimum="10"/>
        <TextBlock HorizontalAlignment="Left" Height="137" Margin="82,80,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="600" FontSize="{Binding Value, ElementName=slider}"/>

    </Grid>
</Window>
